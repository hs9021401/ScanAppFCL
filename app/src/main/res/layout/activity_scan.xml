<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    tools:context="com.foxlinkimage.fit.scanapp.ScanActivity">

    <ImageView
        android:id="@+id/scananim"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:contentDescription="images" />


    <Button
        android:id="@+id/cancelscan"
        android:layout_gravity="center"
        android:background="@drawable/button_bgcolor"
        android:textColor="#ffffff"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/cancelscan" />


    <ScrollView
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1">

        <TextView
            android:id="@+id/response"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Response Area" />
    </ScrollView>

</LinearLayout>
